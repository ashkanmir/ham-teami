<li id="micropost-<%= micropost.id %>">
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content" style="padding: 5px 0 5px 0"><%= micropost.content %></span>
  <span class="timestamp">
     <%= time_ago_in_words(micropost.created_at) %>   توییت شده.
     <% if current_user?(micropost.user) %>
      <%= link_to "حذف", micropost, method: :delete,
                                       data: { confirm: "حذف شه؟" } %>
      <% end %>
  </span>
</li>