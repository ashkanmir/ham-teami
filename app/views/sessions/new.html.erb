

<% provide(:title, "ورود") %>

<h2 style="margin-bottom: 10px;">بیا تو</h2>


<div class="row">
  <div class="col-sm-4 col-sm-offset-4" >
    <%= form_for(:session, url: login_path) do |f|%>
  
    <div class="inner-addon right-addon">
    <i class="glyphicon glyphicon-user"></i>
      <%= f.email_field :email, placeholder: "ایمیل", class: 'form-control' %>
    </div>

    <% f.label :password %>
      <%= f.password_field :password, placeholder: "رمز عبور", class: 'form-control' %>
    
    <%= f.submit "ورود", class: "btn btn-primary" %>
    
    
    <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>منو یادت بمونه !</span> <p>هنوز عضو نیستی؟ <%= link_to "ثبت نام کن!", signup_path %></p> 
    <% end %>
    <% end %>
    
    
  </div>
</div>
