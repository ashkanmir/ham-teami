<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4 col-md-offset-8">
    <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
        </section>
    </aside>
</div>    


<div class="row">
  <aside class="col-md-4 col-md-offset-7" style="margin-top: 5px; text-align: right;">
        <p style=" padding-bottom: 20px; border-top: 1px solid #eaeaea; font-size: 1.4em;">
          شهر: <%= @user.city %>
          <br>
          مهارت: <%= @user.work %>
          <br>
          سابقه استارتاپی: <%= @user.exp %>
        </p>
</aside>
</div>
